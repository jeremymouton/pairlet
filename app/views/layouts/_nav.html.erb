<div class="container">
	<ul class="topnav">
		<% if user_signed_in? %>
			<li><%= link_to 'My List', flirts_path %></li>
			<li><%= link_to 'Mutual connections', connections_path %></li>
		<% else %>
			<li><%= link_to 'Home', root_path %></li>
			<li><%= link_to 'About', about_path %></li>
		<% end %>

		<% if user_signed_in? %>
		  <li class="dropdown">
			<%= link_to raw("#{current_user.email} <b class=\"caret\"></b>"), '#', :class => "dropdown-toggle", :"data-toggle" => "dropdown" %>
			<ul class="dropdown-menu">
				<li><%= link_to "Edit account", edit_user_registration_path %></li>
				<li><%= link_to 'My profiles', links_path %></li>
			</ul>
		</li>
		  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
		<% else %>
		  <li><%= link_to "Sign up", new_user_registration_path %></li>
		  <li><%= link_to "Login", new_user_session_path %></li>
		<% end %>
	</ul>
</div>