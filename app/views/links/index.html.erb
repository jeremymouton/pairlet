<%= title "Listing accounts" %>

<table class="table">
  <tr>
    <th>Provider</th>
    <th>Handle</th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.provider %></td>
    <td><%= link.handle %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

